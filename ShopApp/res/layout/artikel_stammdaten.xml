				android:textIsSelectable="true" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_lagerbestand" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/lagerbestand_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_preis" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/preis_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"/>
	
		</TableRow>
		
