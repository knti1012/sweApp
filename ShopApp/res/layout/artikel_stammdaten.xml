<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.main.Main" >

	<TableLayout
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_artikel_id" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/artikel_id"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="false" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_name" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/name_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_art" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/art_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_farbe" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/farbe_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_groesse" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/groesse_txt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true" />
	
		</TableRow>
		
		<TableRow>
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/a_kategorie" />
			
			<TextView
			    style="@style/RechteSpalteText"
				android:id="@+id/kategorie_txt"
				android:layout_width="match_parent"
